= simple_form_for @tosmic, html: { multipart: true } do |f|
  - if @tosmic.errors.any?
    #errors
    %h2
    = pluralize(@tosmic.errors.count, "error")
    prevented this from saving
    %ul
      - @tosmic.errors.full_messages.each do |msg|
        %li = msg

  .form-group
    = f.input :title, input_html: {class: 'form-control'}

  = f.button :submit, class: "btn btn-primary"
