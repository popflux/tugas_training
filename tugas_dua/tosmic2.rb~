class Player
attr_accessor :name, :blood, :manna
def initialize
@name = %w[]
@blood = []
@manna = []
end
def add_stats(name)
@name << name
@blood = 100
@manna = 40
end
end
print "Input nama: "
new_name = gets.chomp
player = Player.new

check = player.name.include? new_name
if (check == false) 
player.add_stats(new_name)
puts "Selamat, anda telah sukses membuat pemain" 
else
puts "Nama telah terpakai!!!"
end
puts player.name 
puts player.blood
puts player.manna		
 
