class Players
  #constructor
  attr_accessor :name, :blood, :manna 
  def initialize
    @name = name
    @blood = 100
    @manna = 40
  end
=begin
  def to_s
    return "The player name is #{name}, the blood is #{blood} and the manna is #{manna}"
    end
=end
  def to_s
    return "Congrats, player '#{name.capitalize}' is now exist"
  end  
end
  
  #creating an object		
  player = Players.new
   
  #using setter
  
  print "\nInput Name :" 
  player.name= gets.chomp

  puts "----------------------------------------", 
	player, 
	"----------------------------------------"
	
  puts "Name: " + player.name 
  puts "Blood: " + player.blood.to_s
  puts "Manna: " + player.manna.to_s
  puts "----------------------------------------"
  
